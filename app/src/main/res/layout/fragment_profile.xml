<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/swamp_green"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePhoto"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:src="@drawable/default_user_image" />

            <TextView
                android:id="@+id/UserNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="38dp" />

            <TextView
                android:id="@+id/UserEmailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Масса пользователя:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/BodyWeightEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/sedative_grey"
                    android:ems="10"
                    android:hint="Ваша масса тела"
                    android:inputType="numberDecimal"
                    android:textColor="@color/sedative_grey"
                    android:textColorHint="@color/sedative_grey"
                    android:textSize="20dp" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="кг"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:textSize="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/BodyWeightOKButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/sedative_green"
                    android:text="OK"
                    app:cornerRadius="15dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Рост пользователя:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/HeightEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/sedative_grey"
                    android:ems="10"
                    android:hint="Ваш рост"
                    android:inputType="numberDecimal"
                    android:textColor="@color/sedative_grey"
                    android:textColorHint="@color/sedative_grey"
                    android:textSize="20dp" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="см"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/HeightOKButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/sedative_green"
                    android:text="OK"
                    app:cornerRadius="15dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Кровяное давление:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/SystolicEditText"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/sedative_grey"
                    android:ems="10"
                    android:hint="Sys"
                    android:inputType="numberDecimal"
                    android:textColor="@color/sedative_grey"
                    android:textColorHint="@color/sedative_grey"
                    android:textSize="20dp" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/DiastolicEditText"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="35dp"
                    android:backgroundTint="@color/sedative_grey"
                    android:ems="10"
                    android:hint="Dia"
                    android:inputType="numberDecimal"
                    android:textColor="@color/sedative_grey"
                    android:textColorHint="@color/sedative_grey"
                    android:textSize="20dp" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="мм рт. ст."
                    android:textColor="@color/white"
                    android:layout_marginRight="23dp"
                    android:textSize="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/BloodPressureOKButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/sedative_green"
                    android:text="OK"
                    app:cornerRadius="15dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Возраст пользователя:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/AgeEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/sedative_grey"
                    android:ems="10"
                    android:hint="Ваш возраст"
                    android:inputType="numberDecimal"
                    android:textColor="@color/sedative_grey"
                    android:textColorHint="@color/sedative_grey"
                    android:textSize="20dp" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="лет"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/AgeOKButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/sedative_green"
                    android:text="OK"
                    app:cornerRadius="15dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Знак зодиака пользователя:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/HoroscopeSpinner"
                    android:layout_width="275dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/sedative_grey"
                    android:ems="10"
                    android:hint="Ваш возраст"
                    android:inputType="numberDecimal"
                    android:textColor="@color/sedative_grey"
                    android:textColorHint="@color/sedative_grey"
                    android:textSize="20dp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/HoroscopeOKButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/sedative_green"
                    android:text="OK"
                    app:cornerRadius="15dp" />

            </LinearLayout>

            <GridView
                android:nestedScrollingEnabled="true"
                android:layout_marginTop="30dp"
                android:id="@+id/photoGalleryGrid"
                android:layout_width="match_parent"
                android:layout_height="244dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:numColumns="2"
                />

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBarProfileFragment"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>